@model IEnumerable<User>
@{ 
    ViewBag.Title = "用户管理";
}
<div class="clearfix">
    <h4>用户管理</h4>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">用户列表</header>
            <div class="pull-out m-t-small">
                <table class="table table-striped b-t text-small">
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>邮箱</th>
                            <th>角色</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="lst-towers">
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.UserName</td>
                                <td>@x.Email</td>
                                <td>@foreach (var y in await User.Manager.GetRolesAsync(x)) { @y @(" ") } </td>
                                <td><a asp-action="Edit" asp-controller="Account" asp-route-id="@x.Id">编辑</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>