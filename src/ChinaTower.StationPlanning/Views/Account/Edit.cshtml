@model User
@{ 
    ViewBag.Title = "编辑用户";
}

<div class="clearfix">
    <h4>用户管理</h4>
</div>
<div class="row">
    <form asp-action="Edit" asp-controller="Account" asp-route-id="@Model.Id" class="col-lg-12">
        <table class="create-user">
            <tr>
                <td class="td-gray">用户名</td>
                <td>@Model.UserName</td>
            </tr>
            @if (await User.Manager.IsInRoleAsync(Model, "Member"))
            {
                <tr>
                    <td class="td-gray">权限</td>
                    <td><input type="text" name="cities" placeholder="用空格分割城市" value="@ViewBag.Cities" class="form-control" /></td>
                </tr>
            }
            <tr>
                <td class="td-gray">密码</td>
                <td><input type="password" name="password" placeholder="不修改请留空" class="form-control" /></td>
            </tr>
        </table>
        <br />
        <p>
            <input type="submit" value="保存" class="btn btn-primary" />
        </p>
    </form>
</div>